#######################################################################
# Parameter file for Prorail : database $ORADB_DBNAME
#######################################################################
# Archive
#
log_archive_format=%t_%s_%r.arc

###########################################
# Database Identification
#
db_domain=<%= @domain_name %>
db_name=<%= @db_name %>

###########################################
# Miscellaneous settings
#
diagnostic_dest=<%= @oracle_base %>

###########################################
# Security and Auditing
#
audit_trail=none
audit_file_dest=<%= @oracle_home -%>/rdbms/audit
remote_login_passwordfile=exclusive

###########################################
# Shared Server
#
dispatchers="(PROTOCOL=TCP) (SERVICE=<%= @db_name -%>XDB)"

log_archive_dest_1='LOCATION=+RECODG'
db_create_file_dest="+DATADG"
db_recovery_file_dest="+RECODG"

*.remote_listener='<%= @scan_name -%><%= @domain_name -%>:<%= @scan_port -%>'

###########################################
# Set instance, thread and undo tablespaces 
#
<%= @db_name -%>1.instance_number=1
<%= @db_name -%>2.instance_number=2
<%= @db_name -%>1.thread=1
<%= @db_name -%>2.thread=2
<%= @db_name -%>1.instance_name=<%= @db_name -%>1
<%= @db_name -%>2.instance_name=<%= @db_name -%>2
<%= @db_name -%>1.undo_tablespace=UNDOTBS1
<%= @db_name -%>2.undo_tablespace=UNDOTBS2
